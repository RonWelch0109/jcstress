<testsuite>

    <test name="org.openjdk.jcstress.tests.interrupt.CurrentThreadIsInterruptedBreakTest">
        <contributed-by>Dr Heinz M. Kabutz (heinz@javaspecialists.eu)</contributed-by>
        <description>
            Tests the interruption of threads via Thread.currentThread().interrupt()
        </description>
        <case>
            <match>TERMINATED</match>
            <expect>ACCEPTABLE</expect>
            <description>
                The thread had sucessfully terminated
            </description>
        </case>
        <case>
            <match>STALE</match>
            <expect>FORBIDDEN</expect>
            <description>
                Thread had failed to respond.
            </description>
        </case>
        <unmatched>
            <expect>FORBIDDEN</expect>
            <description>
                Other cases are not expected.
            </description>
        </unmatched>
    </test>


